{
  "name": "r3-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for the R3 platform",
  "private": true,
  "scripts": {
    "test": "npm run test:backend && npm run test:frontend && npm run test:integration",
    "test:backend": "jest --testPathPattern=r3-backend",
    "test:frontend": "jest --config jest.config.frontend.js",
    "test:integration": "jest --testPathPattern=integration",
    "test:r3-backend": "jest --testPathPattern=r3-backend",
    "test:r3-frontend": "jest --testPathPattern=r3-frontend",
    "test:session": "jest --testPathPattern=r3-backend.*session",
    "test:payment": "jest --testPathPattern=r3-backend.*payment",
    "test:ach": "jest --testPathPattern=ach",
    "test:order-consistency": "jest --testPathPattern='order-creation-(consistency|rules)'",
    "test:webhooks": "jest --testPathPattern=r3-backend.*webhooks",
    "test:security": "jest --testPathPattern=r3-backend.*security",
    "test:checkout": "jest --testPathPattern=r3-frontend.*checkout-flow",
    "test:recovery": "jest --testPathPattern=r3-frontend.*error-recovery",
    "test:ui": "jest --testPathPattern=r3-frontend.*ui-components",
    "test:full-flow": "jest --testPathPattern=integration/full-checkout",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome'",
    "test:e2e:performance": "playwright test --project=performance",
    "test:e2e:accessibility": "playwright test --project=accessibility",
    "test:fast": "node scripts/test-fast.js",
    "test:cart": "node scripts/test-fast.js -- --grep 'Cart'",
    "test:checkout": "node scripts/test-fast.js -- --grep 'Checkout'",
    "test:backend-e2e": "node run-tests.js --type backend-e2e",
    "test:backend-e2e:api": "jest --testPathPattern=backend/r3-backend/e2e/api-journey",
    "test:backend-e2e:load": "node run-tests.js --type load-test",
    "test:backend-e2e:security": "node run-tests.js --type security-test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:env:dev": "NODE_ENV=development npm test",
    "test:env:staging": "NODE_ENV=staging npm test",
    "test:env:prod": "NODE_ENV=production npm run test:integration -- --testNamePattern='Happy Path'",
    "test:backend:dev": "NODE_ENV=development npm run test:r3-backend",
    "test:backend:staging": "NODE_ENV=staging npm run test:r3-backend",
    "test:backend:prod": "NODE_ENV=production npm run test:r3-backend -- --testNamePattern='Happy Path'",
    "test:backend:e2e:dev": "NODE_ENV=development npm run test:backend-e2e",
    "test:backend:e2e:staging": "NODE_ENV=staging npm run test:backend-e2e",
    "test:backend:load": "NODE_ENV=development npm run test:backend-e2e:load",
    "test:backend:security": "NODE_ENV=development npm run test:backend-e2e:security",
    "test:frontend:dev": "NODE_ENV=development npm run test:r3-frontend",
    "test:frontend:staging": "NODE_ENV=staging npm run test:r3-frontend",
    "test:frontend:prod": "NODE_ENV=production npm run test:r3-frontend -- --testNamePattern='Happy Path'",
    "setup": "node scripts/setup-environment.js",
    "clean": "rm -rf coverage/ test-results/ node_modules/.cache/",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "playwright:setup": "npm run playwright:install && npm run playwright:install-deps"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/jest": "^29.5.5",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jsdom": "^26.1.0",
    "msw": "^1.3.2",
    "playwright": "^1.40.0",
    "prettier": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest.setup.js"
    ],
    "testMatch": [
      "**/r3-backend/**/*.test.js",
      "**/r3-backend/**/*.spec.js",
      "**/r3-frontend/**/*.test.js",
      "**/integration/**/*.test.js"
    ],
    "moduleNameMapper": {
      "^@fixtures$": "<rootDir>/shared/fixtures/index.js",
      "^@fixtures/(.*)$": "<rootDir>/shared/fixtures/$1",
      "^@helpers/(.*)$": "<rootDir>/shared/helpers/$1",
      "^@mocks/(.*)$": "<rootDir>/shared/mocks/$1",
      "^@config/(.*)$": "<rootDir>/config/$1"
    },
    "collectCoverageFrom": [
      "r3-backend/**/*.test.js",
      "r3-frontend/**/*.test.js",
      "integration/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
